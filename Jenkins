pipeline { 
agent{label 'ALL'}
parameters { choice(name: 'BRANCH_SELECT', choices: ['master', 'devlop', 'rel'], description:  'select the branch ') }
stages {
	stage('git cloneing') {
		steps {
		git url: 'https://github.com/vikashpudi/shopizer.git' , branch: 'master'
		 
		}
	    }
	stage ('Artifactory configuration') {
        steps {
				rtMavenDeployer ( 
                id: "maven-depolyer",
				//
                serverId: "vikashsai",
                releaseRepo: 'mymavenrepo',
                snapshotRepo: 'mymavenrepo'
				)
        }
        }

    stage ('Exec Maven') {
            steps {
                rtMavenRun (
                    tool: 'MAVEN3.6.3' ,
                    pom: 'pom.xml',
                    goals: 'package'
					
                    )
        }
        }
        stage ('Publish Build Info') {
            steps {
                rtPublishBuildInfo (
                    serverId: "vikashsai"
                )
        }
		}
 }
  }