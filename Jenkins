pipeline { 
agent{label 'ALL'}

parameters { choice(name: 'BRANCH_SELECT', choices: ['package', 'install' ], description:  'select the branch ')
             string(name: 'BRANCH', defaultValue: 'master', description: 'Who should I say hello to?') }
stages {
	stage('git cloneing') {
		steps {
		git url: 'https://github.com/vikashpudi/shopizer.git' , branch: '${params.BRANCH}'
		 
		}
	    }
	stage ('Artifactory configuration') {
        steps {
				rtMavenDeployer ( 
                id: "maven-depolyer",
				//
                serverId: "vikashsai",
                releaseRepo: 'mymavenrepo',
                snapshotRepo: 'mymavenrepo'
				)
        }
        }

    stage ('Exec Maven') {
            steps {
                rtMavenRun (
                    tool: 'MAVEN3.6.3' ,
                    pom: 'pom.xml',
                    goals: '${params.BRANCH_SELECT}'
					
                    )
        }
        }
        stage ('Publish Build Info') {
            steps {
                rtPublishBuildInfo (
                    serverId: "vikashsai"
                )
        }
		}
        stage ('this is second node') {
            agent{label 'bs1'}
            steps {
                 sh 'echo "PWD"'
                 
        }
		}
 }
  }